{
    "name": "halimr/lang-bangla",
    "description": "Bangla language extension pack for Flarum.",
    "type": "flarum-extension",
    "keywords": ["extension", "flarum", "bangla", "locale", "translation"],
    "license": "MIT",
    "authors": [
        {
            "name": "Abdul Halim",
            "email": "hello@halimjr.com",
            "homepage": "halimjr/lang-bangla"
        }
    ],
    "support": {
        "issues": "https://github.com/halimjr/lang-bangla/issues",
        "source": "https://github.com/halimjr/lang-bangla"
    },
    "require": {
        "flarum/core": "^1.0.0"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.10.x-dev"
        },
        "flarum-extension": {
            "title": "Bangla",
            "category": "language",
            "info": {
                "website": "https://github.com/halimjr/lang-bangla",
                "support": "https://github.com//halimjr/lang-bangla/issues"
            },
            "icon": {
                "image": "icon.svg",
                "backgroundColor": "#4caf50",
                "backgroundSize": "cover",
                "backgroundPosition": "center"
            }
        },
        "flarum-locale": {
            "code": "bn",
            "title": "বাংলা"
        }
    }
}